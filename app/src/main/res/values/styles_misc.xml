<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.AppTheme.Launch" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <item name="colorPrimaryDark">@color/splash_background</item>
    </style>

    <!--MediaScanNotification-->
    <style name="TextAppearance.MediaScan.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.MediaScan.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/notification_accent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBar.Horizontal.MediaScan.Preparing" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/notification_accent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="ProgressBar.Horizontal.MediaScan.Scanning" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressTint">@color/notification_accent</item>
        <item name="android:progressTintMode">src_in</item>
    </style>

    <!--Player-->
    <style name="PlayButton.JustIcon.White" parent="PlayButton.Default">
        <item name="pauseBackground">@color/transparent</item>
        <item name="resumeBackground">@color/transparent</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="PlayButton.Main" parent="PlayButton.Default">
        <item name="pauseBackground">@color/transparent</item>
        <item name="resumeBackground">@color/transparent</item>
        <item name="iconTint">?iconImageTint</item>
        <item name="android:background">@drawable/bg_main_play_button</item>
    </style>

    <!--Lyrics-->
    <style name="TextAppearance.Lyrics.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="TextAppearance.Lyrics.TextLine" parent="TextAppearance.AppCompat.Body1">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <!--Tooltips-->
    <style name="Tooltip.Default" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">?colorSecondary</item>
        <item name="ttlm_cornerRadius">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Tooltip</item>
    </style>

    <style name="TextAppearance.Tooltip" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?colorOnSecondary</item>
    </style>
</resources>